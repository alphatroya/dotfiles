let mapleader = " "

set ignorecase
set smartcase

" Enable ideajoin mode
set ideajoin

" Enable message on the status line to show current mode
set showmode

" Keep the mode that was enabled before starting a refactoring
set idearefactormode=keep

" Disable vim mode in dialogs
set ideavimsupport=

" PLUGINS SECTION BEGIN

" Edit functions arguments edition. Commands: Additional text objects: aa, ia
set argtextobj

" Enable surround plugin emulation
set surround

" Enable commentary plugin emulation
set commentary

" Enable replace with register emulation. Commands: gr, grr
set ReplaceWithRegister

" Highlight yank selection action
set highlightedyank

" Vim exchange emulation. Commands: cx, cxx, X, cxc
set exchange

" PLUGINS SECTION END

set langmap=ФИСВУАПРШОЛДЬТЩЗЙКЫЕГМЦЧНЯЖ;ABCDEFGHIJKLMNOPQRSTUVWXYZ:,фисвуапршолдьтщзйкыегмцчня;abcdefghijklmnopqrstuvwxyz

" system clipboard
vmap <leader>y "+y
vmap <leader>d "+d
nmap <leader>y "+yy
nmap <leader>p "+p
nmap <leader>P "+P
vmap <leader>p "+p
vmap <leader>P "+P
