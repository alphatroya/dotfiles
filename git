[core]
	excludesfile = ~/.gitignore
	autocrlf = input
[merge]
	tool = vim_mergetool
[mergetool "vim_mergetool"]
	cmd = nvim "$MERGED"
[push]
	autoSetupRemote = true
[rebase]
	autosquash = true
[mergetool]
	keepBackup = false
[credential]
	helper = osxkeychain
[fetch]
	prune = true
[help]
        autoCorrect = prompt
[status]
        short = true
[alias]
	append = town append
	diff-parent = town diff-parent
	hack = town hack
	kill = town kill
	prepend = town prepend
	propose = town propose
	repo = town repo
	ship = town ship
	sync = town sync
	rename-branch = town rename-branch
	ts = town switch --all --display-types
	compress = town compress
[rerere]
	enabled = true
[pull]
	rebase = true
	ff = only
[diff]
	algorithm = histogram
