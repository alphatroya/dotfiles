[core]
	excludesfile = ~/.gitignore
	autocrlf = input
[merge]
	tool = vim_mergetool
[mergetool "vim_mergetool"]
	cmd = nvim "$MERGED"
[push]
	autoSetupRemote = true
[rebase]
	autosquash = true
[mergetool]
	keepBackup = false
[fetch]
	prune = true
[help]
        autoCorrect = prompt
[status]
        short = true
[alias]
	append = town append
	diff-parent = town diff-parent
	kill = town kill
	prepend = town prepend
	repo = town repo
	ship = town ship
	rename-branch = town rename-branch
	compress = town compress
[rerere]
	enabled = true
[pull]
	rebase = true
	ff = only
[diff]
	algorithm = histogram
