	excludesfile = ~/.gitignore
	autocrlf = input
[interactive]
	diffFilter = delta --color-only
[delta]
	features = line-numbers decorations side-by-side
	colorMoved = default
[merge]
	tool = vim_mergetool
[mergetool "vim_mergetool"]
	cmd = nvim "$MERGED"
[commit]
	gpgsign = true
