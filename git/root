[core]
	excludesfile = ~/.gitignore
	autocrlf = input
[merge]
	tool = vim_mergetool
[mergetool "vim_mergetool"]
	cmd = nvim "$MERGED"
[push]
	default = simple
	autoSetupRemote = true
[rebase]
	autosquash = true
[mergetool]
	keepBackup = false
[color]
	ui = true
[credential]
	helper = osxkeychain
[fetch]
	prune = true
[pull]
	rebase = false
[init]
	defaultBranch = main
[help]
        autoCorrect = prompt
[status]
        short = true
[alias]
	append = town append
	hack = town hack
	kill = town kill
	new-pull-request = town new-pull-request
	prepend = town prepend
	prune-branches = town prune-branches
	rename-branch = town rename-branch
	repo = town repo
	ship = town ship
	sync = town sync
