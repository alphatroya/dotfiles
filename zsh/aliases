#!/usr/bin/env bash

# Difftastic
alias gdiff="GIT_EXTERNAL_DIFF=difft git diff"
alias gshow="GIT_EXTERNAL_DIFF=difft git show --ext-diff"

# Russian typos
alias учше="exit"

# Alternatives to standard tools
alias vim="nvim"
alias ls="exa"
alias cat="bat"

# git aliases
alias gloga="git log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
alias gfap="git fetch --all"
alias gcS="git commit"

# Fill Redmine hours aliases
func fillredmine() {
    local return="no"
    if [[ ! -f work.csv ]]; then
        return="yes"
        cd /Users/alphatroya/src/github.com/alphatroya/stunning-enigma
    fi

    git pull
    vim work.csv
    if [[ `git status --porcelain` ]]; then
        git commit --all -m "Update $(date -u +"%Y-%m-%d")" && git push
    else
        echo "Nothing to commit, exit"
    fi

    if [[ $return == "yes" ]]; then
        cd -
    fi
}

# view files tree
alias lt1='exa --tree -L1'
alias lt2='exa --tree -L2'
alias lt3='exa --tree -L3'

alias -s git="git get"
